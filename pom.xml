<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.xwiki.contrib</groupId>
    <artifactId>parent-platform</artifactId>
    <version>14.2</version>
  </parent>

  <groupId>org.xwiki.contrib.fasten</groupId>
  <artifactId>fasten</artifactId>
  <name>FASTEN</name>
  <version>0.1-SNAPSHOT</version>
  <packaging>pom</packaging>
  <description>FASTEN integration into XWiki</description>

  <properties>
    <xwiki.release.jira.skip>false</xwiki.release.jira.skip>
    <xwiki.issueManagement.jira.id>FASTEN</xwiki.issueManagement.jira.id>
  </properties>

  <modules>
    <module>fasten-api</module>
    <module>fasten-ui</module>
  </modules>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-release-plugin</artifactId>
          <configuration>
            <arguments>-Pintegration-tests -DskipTests=true</arguments>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

  <developers>
    <developer>
      <id>tmortagne</id>
      <name>Thomas Mortagne</name>
      <email>thomas.mortagne at xwiki.com</email>
      <timezone>+1</timezone>
      <organization>XWiki SAS</organization>
      <organizationUrl>http://www.xwiki.com</organizationUrl>
    </developer>
  </developers>

  <scm>
    <connection>scm:git:git://github.com/xwiki-contrib/application-fasten.git</connection>
    <developerConnection>scm:git:git@github.com:xwiki-contrib/application-fasten.git</developerConnection>
    <url>https://github.com/xwiki-contrib/application-fasten/tree/master</url>
    <tag>HEAD</tag>
  </scm>
</project>
